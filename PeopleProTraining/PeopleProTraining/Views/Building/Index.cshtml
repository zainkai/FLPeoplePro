@model IEnumerable<PeopleProTraining.Dal.Models.Building>

@{
    ViewBag.Title = "Index";
}

@section head{
    <script src="/scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script>
        function ajax_post() {
            //append tr to table***
            var postData = new Object();
            postData.buildName = document.getElementById("building_name_txt").value;
            postData.buildAddress = document.getElementById("building_addr_txt").value;
            //console.log("this function here");//debugging tool

            $.ajax({
                method: "POST",
                url: '@Url.Action("Post")',
                data: postData,
                complete: function () {
                    alert("complete ajax was entered");
                    var table = document.getElementById("BuildingTable");
                    var row = table.insertRow(0);
                    var td_name = row.insertCell(0);
                    var td_addr = row.insertCell(1);
                    var td_func = row.insertCell(2);

                    td_name.textContent = postData.buildName;
                    td_addr.textContent = postData.buildAddress;
                    td_func.textContent = "TODO: ADD functions here";


                    /*
                    var row = document.createElement("tr");
                    var td_name = document.createElement("td");
                    var td_addr = document.createElement("td");
                    var td_functions = document.createElement("td");
                    var table = document.getElementById("BuildingTable");

                    //filling data
                    td_name = postData.buildName;
                    td_addr = postData.buildAddress;
                    td_functions = "TODO: functions";

                    //appending to html
                    row.appendChild(td_name);
                    row.appendChild(td_addr);
                    row.appendChild(td_functions);
                    table.appendChild(row);
                    */
                },
                error: function (xhr, status, errorText) {
                    alert(errorText);
                }
            });
        }
    </script>
}




<h2>Building Index</h2>

<button type="button" class="btn" data-toggle="modal" data-target="#create_building_modal">Create new Building(modal)</button>

<!-- Modal******************************************************** -->
<div id="create_building_modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create new Building</h4>
            </div>
            <div class="modal-body">
                <form  method="post">
                    <p>Address:</p>
                    <input id="building_addr_txt" type="text" name="addr_input" />
                    <br />
                    <p>Name:</p>
                    <input id="building_name_txt" type="text" name="name_input" />
                    <br />
                    <input id="data_submit" type="submit" onclick="javascript: ajax_post();" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!--*****************************************************************-->


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="BuildingTable" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
