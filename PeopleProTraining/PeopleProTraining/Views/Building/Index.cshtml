@model IEnumerable<PeopleProTraining.Dal.Models.Building>

@{
    ViewBag.Title = "Index";
}

<!-- **********SCRIPTS***************** -->
    <script src="~/scripts/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-ui-1.11.4.js" type="text/javascript"></script>


    <script type="text/javascript">
        $(function () {
            $("#dlg_building_create").dialog({
                modal: true,
                autoOpen: false,
                width: 400,
                resizable: true,
                title: "Create A New Building",
            });
        });
    </script>
<!--***********************************-->




<h2>Building Index</h2>

<p>
    @Html.ActionLink("Create new (modal)","Create_Modal" ,null,new { @id = "dlg_building_create" })
</p>

<div id="dlg_building_create"> </div>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
